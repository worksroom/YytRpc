<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserSession">
    <resultMap type="UserSession" id="UserSessionResultMap">
        <result property="userId" column="user_id"/>
        <result property="session" column="session"/>
        <result property="createTime" column="create_time"/>
        <result property="expireTime" column="expire_time"/>
    </resultMap>

    <insert id="insert" parameterType="UserSession">
        insert into user_session
        (user_id,session,create_time,expire_time)
        VALUES
        (#{userId},#{session},#{createTime},#{expireTime})
    </insert>

    <select id="getSession" parameterType="Map" resultMap="UserSessionResultMap">
		select user_id,session,expire_time,create_time
		from user_session
		where user_id=#{userId}
	</select>
</mapper>